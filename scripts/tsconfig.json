{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "bin",
    "rootDir": "src",
    "module": "commonjs",
    "lib": ["es2018"],

    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "skipDefaultLibCheck": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "bin",
    "../node_modules"
  ]
}
